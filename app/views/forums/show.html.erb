<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @forum.name %>
</p>

<p>
  <b>Title:</b>
  <%= @forum.title %>
</p>

<p>
  <!--<b>Content:</b>-->
  <%= #@forum.content
  %>
</p>

<h2>Posts</h2>
<% @forum.topics.each do |topic| %>
<p>
  <b>User:</b>
  <%= topic.name %>
  </p>

<p>
  <b>Topic:</b>
  <%= topic.title %>
  </p>


<p>
  <%= link_to 'Destroy Topic', [topic.forum, topic], :confirm => 'Are you sure?', :method => :delete %>
</p> 
<% end %>

<h2>Add a Post: </h2>

<%= form_for ([@forum, @forum.topics.build])  do |f| %>
  <%= f.hidden_field :forum_id %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>  
  <div>
    <%= f.submit %>
  </div> 
<% end %>


<%= link_to 'Edit', edit_forum_path(@forum) %> |
<%= link_to 'Back', subject_path(@forum.subject) %>
